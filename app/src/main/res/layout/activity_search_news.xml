<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchNewsActivity"
    android:background="#E0FFFF">

    <!-- Toolbar with back button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0FFFF"
        app:navigationIcon="?android:attr/homeAsUpIndicator"
        app:titleTextColor="@android:color/black" />

    <!-- Search Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ค้นหาข่าว"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/search_by_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="กรอกชื่อหรือหัวข้อข่าว"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            android:padding="12dp"
            android:minHeight="48dp" />

        <!-- Layout for the button to be aligned on the right -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/search_by_name_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค้นหา"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:minHeight="48dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/search_by_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="เลือกวันที่"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            android:padding="12dp"
            android:minHeight="48dp" />

        <!-- Layout for the button to be aligned on the right -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/search_by_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค้นหา"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:minHeight="48dp" />
        </RelativeLayout>

        <!-- LinearLayout to display start date and end date on the same line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/start_date_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="เลือกวันที่เริ่มต้น"
                android:focusable="false"
                android:padding="12dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/end_date_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="เลือกวันที่สิ้นสุด"
                android:focusable="false"
                android:padding="12dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Layout for the date range button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/search_by_date_range_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค้นหาตามช่วงวันที่"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:minHeight="48dp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
